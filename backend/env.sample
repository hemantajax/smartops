# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://dqueqxubwhudihiclvce.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Direct database connection (for migrations/ORM)
# Get from: Settings > Database > Connection string
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.dqueqxubwhudihiclvce.supabase.co:5432/postgres

